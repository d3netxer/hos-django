
{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-018c9568",
    "instance_type": "t1.micro",
    "ssh_username": "ubuntu",
    "ami_name": "packer-hos {{timestamp}}"
  }],
  
  "provisioners": [{
    "type": "shell",
    "inline": [
      "#!/bin/bash -eux",
      "sleep 30",
      "sudo add-apt-repository ppa:ubuntugis/ppa -y",
      "sudo apt-get install whois",
      "sudo useradd tgertin -m -p `mkpasswd tgertin`",
      "sudo usermod -a -G sudo tgertin",
      "sudo useradd ttafsir -m -p `mkpasswd ttafsir`",
      "sudo usermod -a -G sudo ttafsir",
      "sudo useradd mcapelli -m -p `mkpasswd mcapelli`",
      "sudo usermod -a -G sudo mcapelli",
      "sudo useradd gurlinthewurld -m -p `mkpasswd gurlinthewurld`",
      "sudo usermod -a -G sudo gurlinthewurld",
      "sudo useradd guest -m -p `mkpasswd guest`",
      "sudo apt-get install python-gdal python-mapnik2 python-pyproj postgresql-9.3 postgis pgadmin3 -y",
      "sudo apt-get install python-dev libpq-dev -y",
      "sudo apt-get install git -y",
      "sudo apt-get install python-virtualenv -y",
      "virtualenv -p /usr/bin/python2.7 py27env",
      ". py27env/bin/activate",
      "pip install django",
      "pip install psycopg2",
      "cd ~tgertin",
      "sudo mkdir .ssh",
      "sudo touch .ssh/authorized_keys",
      "sudo chown tgertin:tgertin .ssh",
      "sudo chmod 700 .ssh",
      "sudo chown tgertin:tgertin .ssh/authorized_keys",
      "sudo chmod 600 .ssh/authorized_keys",
      "cd ~ttafsir",
      "sudo mkdir .ssh",
      "sudo touch .ssh/authorized_keys",
      "sudo chown ttafsir:ttafsir .ssh",
      "sudo chmod 700 .ssh",
      "sudo chown ttafsir:ttafsir .ssh/authorized_keys",
      "sudo chmod 600 .ssh/authorized_keys",
      "cd ~mcapelli",
      "sudo mkdir .ssh",
      "sudo touch .ssh/authorized_keys",
      "sudo chown mcapelli:mcapelli .ssh",
      "sudo chmod 700 .ssh",
      "sudo chown mcapelli:mcapelli .ssh/authorized_keys",
      "sudo chmod 600 .ssh/authorized_keys",
      "cd ~gurlinthewurld",
      "sudo mkdir .ssh",
      "sudo touch .ssh/authorized_keys",
      "sudo chown gurlinthewurld:gurlinthewurld .ssh",
      "sudo chmod 700 .ssh",
      "sudo chown gurlinthewurld:gurlinthewurld .ssh/authorized_keys",
      "sudo chmod 600 .ssh/authorized_keys",
      "cd ~guest",
      "sudo mkdir .ssh",
      "sudo touch .ssh/authorized_keys",
      "sudo chown guest:guest .ssh",
      "sudo chmod 700 .ssh",
      "sudo chown guest:guest .ssh/authorized_keys",
      "sudo chmod 600 .ssh/authorized_keys"

    ]
  }]
  
}


  
